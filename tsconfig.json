{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,

    "noImplicitReturns": false,
    "strict": false,
    "downlevelIteration": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
  },
  "paths": {
    "@components/*": ["src/components/*"],
    "@pages/*": ["pages/*"],
    "@server/*": ["server/*"],
    "@static/*": ["static/*"],
    "@hooks/*": ["src/hooks/*"],
    "@api/*": ["src/api/*"],
    "@styles/*": ["styles/*"],
    "@screens/*": ["src/screens/*"],
    "@redux/*": ["src/redux/*"],
    "@lib/*": ["src/lib/*"],
    "@layouts/*": ["src/layouts/*"],
    "@utils/*": ["src/utils/*"],
    "@helpers/*": ["src/helpers/*"],
    "@types/*": ["src/types/*"]
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"],
}
